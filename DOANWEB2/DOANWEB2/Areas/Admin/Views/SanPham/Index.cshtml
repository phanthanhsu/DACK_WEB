@model IEnumerable<ShopConnection.SanPham>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminIndex.cshtml";
}

<table>
    <tr>
        <th>Mã Sản Phẩm</th>
        <th>Tên Sản Phẩm</th>
        <th>Mô Tả</th>
        <th>Giá Tiền</th>
        <th>Xuất Xứ</th>
        <th>Nhà Sản Xuất</th>
        <th>Loại Sản Phẩm</th>
        <th style="text-align: center;" ><a href="~/Admin/SanPham/Create"><img src="~/Public/img/Add2.png" style="width: 20px;" title="Thêm Sản Phẩm" /></a></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.MaSanPham</td>
            <td>@item.TenSanPham</td>
            <td>.....</td>
            <td>@item.GiaTien đ</td>
            <td>@item.XuatXu</td>
            <td>@item.NhaSanXuat</td>
            <td style="text-align: center;" >@item.MaLoaiSanPham</td>
            <td style="text-align: center;" >
                <a href="~/Admin/SanPham/Edit/@item.MaSanPham"><img src="~/Public/img/edit2.png" style="width: 20px;" title="Sửa Sản Phẩm" /></a>
                &nbsp;
                @if (item.TinhTrang == 1)
                {
                    <a href="~/Admin/SanPham/Delete/@item.MaSanPham"><img src="~/Public/img/un_lock.png" style="width: 20px;" title="Khoá Sản Phẩm" /></a>
                }
                else
                {
                    <a href="~/Admin/SanPham/UnDelete/@item.MaSanPham"><img src="~/Public/img/lock.png" style="width: 20px;" title="Mở Khoá Sản Phẩm" /></a>
                }
                &nbsp;
                <a href="~/Admin/SanPham/ImgOfSP/@item.MaSanPham"><img src="~/Public/img/Add_image.svg" style="width: 20px;" title="Thêm Ảnh Cho Sản Phẩm" /></a>
            </td>
        </tr>
    }
</table>
